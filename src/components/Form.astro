<div class="flex justify-center items-center min-h-screen bg-gradient-to-br from-[#1A1A1A] to-[#0D0D0D]">
  <div class="w-full max-w-lg p-8 bg-[#121212] bg-opacity-95 rounded-lg shadow-lg charge">
    <h1 class="text-4xl font-bold text-center mb-6 text-white">
      REGISTRO DE <span class="text-red-600">CONTACTO</span>
    </h1>
    <form method="POST" class="space-y-6">
      <div>
        <label class="block text-xl font-medium text-gray-300 mb-2">Nombre:</label>
        <input type="text" name="username" required class="w-full px-4 py-2 bg-[#1F1F1F] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600" />
      </div>
      <div>
        <label class="block text-xl font-medium text-gray-300 mb-2">Correo <span class="text-red-600">electrónico:</span></label>
        <input type="email" name="email" required class="w-full px-4 py-2 bg-[#1F1F1F] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600" />
      </div>
      <div>
        <label class="block text-xl font-medium text-gray-300 mb-2">Número <span class="text-red-600">telefónico:</span></label>
        <input type="text" name="phone" required class="w-full px-4 py-2 bg-[#1F1F1F] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600" />
      </div>
      <div>
        <label class="block text-xl font-medium text-gray-300 mb-2">Contenido del <span class="text-red-600">mensaje:</span></label>
        <textarea name="message" rows="4" required class="w-full px-4 py-2 bg-[#1F1F1F] text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-red-600 resize-none"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="px-6 py-3 bg-red-600 text-white font-semibold text-lg rounded-lg shadow-md hover:bg-red-700 hover:shadow-xl transform hover:scale-105 transition duration-300">
          Enviar
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  @keyframes charge {
    from {
      scale: 0.5;
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      scale: 1;
      opacity: 1;
      transform: translateY(0);
    }
  }

  .charge {
    animation: charge linear both; 
    animation-timeline: view(); 
    animation-range: entry 5% cover 15%; 
  }
</style>
