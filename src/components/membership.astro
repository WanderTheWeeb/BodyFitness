---
import Card from "./Card.astro";
import Cardpaquet from "./cardpaquet.astro";
---
<article
id="membership"
class="relative bg-cover bg-center py-16 px-4 sm:px-8 lg:px-16" style="background-image: url('https://res.cloudinary.com/dt8ulsehy/image/upload/v1733448008/fondoService_x0b2kb.png');">
    <!-- Capa oscura -->
    <div class="absolute inset-0 bg-black bg-opacity-90"></div>
  
    <div class="relative max-w-screen-xl mx-auto">
      <!-- Título principal -->
      <div>
        <h2 class="text-4xl lg:text-6xl text-white text-center mb-12 font-bold">
          ELIGE LA MEMBRESÍA <span class="text-red-600">PERFECTA PARA TI</span>
        </h2>
      </div>
  
      <!-- Membresías Individuales -->
      <section class="mb-16">
        <div class="border border-white rounded-full mx-auto text-center mb-8 max-w-lg">
          <h3 class="text-white text-xl lg:text-3xl font-semibold py-2 uppercase">
            MEMBRESÍAS INDIVIDUALES
          </h3>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6">
          <Card
            title="Inscripción"
            price="$200"
            description="Cuota única requerida para nuevos miembros, válida para activar cualquier membresía"
          />
          <Card
            title="Normal"
            price="$450"
            description="Acceso completo y libre al gimnasio"
          />
          <Card
            title="Estudiantes"
            price="$400"
            description="Para estudiantes con credencial vigente"
          />
          <Card
            title="Cobro Automático"
            price="$300"
            description="Cargo directo a tu tarjeta para mayor comodidad"
          />
          <Card
            title="Quincenal"
            price="$250"
            description="Acceso completo al gimnasio por dos semanas"
          />
        </div>
      </section>
  
      <!-- Paquetes Especiales -->
      <section>
        <div class="border border-white rounded-full mx-auto text-center mb-8 max-w-lg">
          <h3 class="text-white text-xl lg:text-3xl font-semibold py-2 uppercase">
            PAQUETES ESPECIALES
          </h3>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <Cardpaquet
            title="Inscripción de Grupo"
            price="$150"
            description="Inscripción con descuento para grupos que se inscriben juntos"
          />
          <Cardpaquet
            title="Parejas"
            price="$700"
            description="Membresía mensual para dos personas, ideal para entrenar juntos"
          />
          <Cardpaquet
            title="3 Personas"
            price="$1050"
            description="Membresía grupal mensual para tres personas con acceso completo"
          />
        </div>
      </section>
    </div>
  </article>
  