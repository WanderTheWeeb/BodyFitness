---
// Services.astro

import ServiceCard from "./servicecard.astro";

const services = [
  {
    title: "ACCESO LIBRE AL GIMNASIO",
    description: "Entrena sin restricciones durante nuestros horarios operativos. Beneficio incluido en todas las membresías.",
    icon: "assets/gym.svg",
  },
  {
    title: "APOYO CONSTANTE DEL ENTRENADOR",
    description: "Entrenadores disponibles en horarios específicos:\n- Matutino: 07:30 - 11:00 hrs\n- Vespertino: 14:00 - 22:00 hrs",
    icon: "assets/trainer.svg",
  },
  {
    title: "RUTINA PERSONALIZADA",
    description: "Planes de entrenamiento adaptados a tus metas y capacidades.",
    icon: "assets/routine.svg",
  },
  {
    title: "PLAN NUTRICIONAL COMPLETO",
    description: "Mantén una alimentación saludable y deliciosa con un plan hecho a tu medida.",
    icon: "assets/diet.svg",
  },
  {
    title: "MONITOREO DE PROGRESO CONSTANTE",
    description: "Seguimos de cerca tus avances para ayudarte a lograr tus objetivos.",
    icon: "assets/progress.svg",
  },
  {
    title: "ACCESO A LA APP DE ENTRENAMIENTO",
    description: "Lleva tus rutinas y progreso en tu teléfono para más comodidad.",
    icon: "assets/app.svg",
  },
  {
    title: "ORIENTACIÓN EN SUPLEMENTACIÓN",
    description: "Te asesoramos sobre el uso adecuado de suplementos para maximizar tus resultados.",
    icon: "assets/supplements.svg",
  },
  {
    title: "WI-FI GRATIS EN LAS INSTALACIONES",
    description: "Conéctate sin costo mientras entrenas.",
    icon: "assets/wifi_icon.svg",
  },
];

---
<section class="py-16 bg-gradient-to-b from-[#212121] to-[#020202]">
  <!-- Título principal con subrayado -->
  <div class="text-center mb-12">
    <h2 class="text-4xl lg:text-5xl font-bold text-red-600 font-sans mb-4">
      BENEFICIOS Y SERVICIOS
    </h2>
    <div class="w-24 h-1 mx-auto bg-red-600"></div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 max-w-7xl mx-auto px-8 ">
    {services.map((service) => (
      <ServiceCard {...service} />
    ))}
  </div>
</section>




